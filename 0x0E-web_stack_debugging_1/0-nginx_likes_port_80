#!/usr/bin/env bash

# Update package list
apt-get update

# Install Nginx
apt-get install -y nginx

# Get the list of active IPv4 addresses
ipv4_addresses=$(ip -4 addr show scope global | grep inet | awk '{print $2}' | cut -d'/' -f1)

# Configure Nginx to listen on port 80 for all active IPv4 addresses
cat > /etc/nginx/sites-available/default <<EOL
server {
    listen 80;
    listen [::]:80;

    server_name _;

    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}
EOL

# Restart Nginx to apply the changes
systemctl restart nginx

# Print success message
echo "Nginx is now configured to listen on port 80 for the following IP addresses:"
echo "$ipv4_addresses"

